<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accout_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="tech42.sathish.paymentwallet.AccoutSelectionActivity">

    <customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/login_text"
        android:text="Account Type"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:id="@+id/wallet_layout"
        android:layout_weight="1"
        android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:src="@drawable/wallet"
        android:layout_gravity="center" />

    <customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textSize="16dp"
        android:text="Wallets"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:id="@+id/recharge_layout"
        android:layout_weight="1"
        android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:src="@drawable/recharge"
        android:layout_gravity="center" />

    <customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textSize="16dp"
        android:text="Rechargers"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:id="@+id/revenue_layout"
        android:layout_weight="1"
        android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:src="@drawable/revenue"
        android:layout_gravity="center" />

    <customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textSize="16dp"
        android:text="Revenue"/>

        </LinearLayout>

</LinearLayout>
